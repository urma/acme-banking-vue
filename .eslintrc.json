{
  "ecmaFeatures": {
    "modules": true
  },
  "plugins": [
    "security",
    "vue"
  ],
  "env": {
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:security/recommended"
  ],
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "never",
      { "beforeStatementContinuationChars": "always" }
    ]
  },
  "parserOptions": {
    "sourceType": "module"
  }
}
